  with_gpu            = true
  gpu_devices         = "3"
  rebasecall          = false
  processed_reads     = ""
  aligned_sam         = ""
  aligned_bam         = ""
  shasta_config       = "/staging/leuven/stg_00002/lcb/jdemeul/software/shasta/conf/Nanopore-Sep2020.conf"
